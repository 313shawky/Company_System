@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}


<a asp-controller="Role" asp-action="Create" class="btn btn-primary mb-5">Add New Role</a>
<br />
@if (Model.Count() > 0)
{
    <div class="row mt-5 mb-3 justify-content-center align-items-center">
        <form asp-action="Index" class="col-12 row offset-1">
            <div class="col-9">
                <input class="form-control" type="text" name="SearchValue" placeholder="Role's Name">
            </div>
            <div class="col-2">
                <input class="form-control btn btn-primary" type="submit" value="Search">
            </div>
        </form>
    </div>
    <br />
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>
                    <partial name="_ButtonsPartialView" model="@Role.Id">
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h1>There is No Role</h1>
    </div>
}

