@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Users</h1>
@if (Model.Count() > 0)
{
    <div class="row mt-5 mb-3 justify-content-center align-items-center">
        <form asp-action="Index" class="col-12 row offset-1">
            <div class="col-9">
                <input class="form-control" type="text" name="SearchValue" placeholder="User's Name">
            </div>
            <div class="col-2">
                <input class="form-control btn btn-primary" type="submit" value="Search">
            </div>
        </form>
    </div>
    <br />
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FName)</td>
                <td>@Html.DisplayNameFor(U => U.LName)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.FName</td>
                    <td>@User.LName</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join("," , User.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@User.Id">
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h1>There is No User</h1>
    </div>
}
